---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
---

<BaseLayout title="رابطہ - Contact">
  <!-- Hero Banner -->
  <section class="page-hero">
    <div class="container">
      <h1 class="page-title animate-fadeInUp">رابطہ کریں</h1>
      <p class="page-subtitle animate-fadeInUp">Get in Touch</p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="contact-section bg-gradient-cream">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info animate-on-scroll">
          <h2>آئیے بات کریں</h2>
          <p class="contact-subtitle">Let's Connect</p>

          <div class="contact-details">
            <div class="contact-item">
              <span class="contact-icon">
                <Icon name="mail" size={32} color="var(--primary-color)" />
              </span>
              <div>
                <h3>ای میل</h3>
                <a href="mailto:contact@abdulbarimk.com"
                  >contact@abdulbarimk.com</a
                >
              </div>
            </div>

            <div class="contact-item">
              <span class="contact-icon">
                <Icon name="map-pin" size={32} color="var(--primary-color)" />
              </span>
              <div>
                <h3>مقام</h3>
                <p>نو پنویل، ممبئی<br />New Panvel, Mumbai</p>
              </div>
            </div>
          </div>

          <div class="contact-message">
            <p class="urdu-message">
              ادبی تعاون، ترجمہ کے منصوبے، یا کسی بھی سوال کے لیے بلا جھجھک
              رابطہ کریں۔
            </p>
            <p class="english-message">
              For literary collaborations, translation projects, or any
              inquiries, feel free to reach out.
            </p>
          </div>
        </div>

        <div class="contact-form-section animate-on-scroll">
          <form class="contact-form" method="POST" action="/api/send-email.php">
            <div class="form-group">
              <label for="name">نام / Name</label>
              <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
              <label for="email">ای میل / Email</label>
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="subject">موضوع / Subject</label>
              <input type="text" id="subject" name="subject" />
            </div>

            <div class="form-group">
              <label for="message">پیغام / Message</label>
              <textarea id="message" name="message" rows="5" required
              ></textarea>
            </div>

            <button type="submit" class="btn submit-btn">
              <Icon name="send" size={20} />
              بھیجیں / Send
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Links -->
  <section class="social-section">
    <div class="container">
      <h2 class="section-title animate-on-scroll">سوشل میڈیا</h2>
      <p class="section-subtitle animate-on-scroll">Follow & Connect</p>

      <div class="social-links animate-on-scroll">
        <a
          href="https://www.facebook.com/abdulbari.mk/"
          class="social-item"
          aria-label="Facebook"
        >
          <span class="social-icon">
            <Icon name="facebook" size={36} color="var(--primary-color)" />
          </span>
          <span class="social-name">Facebook</span>
        </a>
        <a href="#" class="social-item" aria-label="Twitter">
          <span class="social-icon">
            <Icon name="twitter" size={36} color="var(--primary-color)" />
          </span>
          <span class="social-name">Twitter</span>
        </a>
        <a href="#" class="social-item" aria-label="Instagram">
          <span class="social-icon">
            <Icon name="instagram" size={36} color="var(--primary-color)" />
          </span>
          <span class="social-name">Instagram</span>
        </a>
        <a href="#" class="social-item" aria-label="LinkedIn">
          <span class="social-icon">
            <Icon name="linkedin" size={36} color="var(--primary-color)" />
          </span>
          <span class="social-name">LinkedIn</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const contactForm = document.querySelector(".contact-form");
    if (!contactForm) return;

    contactForm.addEventListener("submit", async (e) => {
      e.preventDefault();

      const form = e.target;
      const formData = new FormData(form);
      const submitBtn = form.querySelector(".submit-btn");
      const originalText = submitBtn.innerHTML;

      try {
        submitBtn.disabled = true;
        submitBtn.innerHTML = "⏳ بھیجا جا رہا ہے...";

        const response = await fetch("/api/send-email.php", {
          method: "POST",
          body: formData,
        });

        const data = await response.json();

        if (data.success) {
          alert("✅ " + data.message);
          form.reset();
        } else {
          alert("❌ خرابی: " + (data.message || "ای میل نہیں بھیجی جا سکی"));
        }
      } catch (error) {
        alert("❌ خرابی: " + error.message);
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
      }
    });
  });
</script>

<style>
  .page-hero {
    background: linear-gradient(
      135deg,
      var(--primary-color) 0%,
      var(--primary-dark) 100%
    );
    padding: 80px 0;
    text-align: center;
    margin-top: -100px;
    padding-top: 180px;
  }

  .page-title {
    font-size: 60px;
    color: var(--text-light);
    margin-bottom: 15px;
  }

  .page-subtitle {
    font-size: 24px;
    color: var(--accent-color);
    font-family: "Cinzel", serif;
  }

  /* Contact Section */
  .contact-section {
    padding: 100px 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .contact-info h2 {
    font-size: 40px;
    margin-bottom: 10px;
  }

  .contact-subtitle {
    font-size: 20px;
    color: var(--text-dark);
    opacity: 0.7;
    font-family: "Cinzel", serif;
    margin-bottom: 40px;
  }

  .contact-details {
    margin-bottom: 40px;
  }

  .contact-item {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    padding: 25px;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    transition: var(--transition-smooth);
    align-items: center;
  }

  .contact-item:hover {
    transform: translateX(-10px);
    box-shadow: 0 10px 30px rgba(139, 38, 53, 0.15);
  }

  .contact-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: var(--bg-cream);
    border-radius: 15px;
  }

  .contact-item h3 {
    font-size: 18px;
    margin-bottom: 5px;
    color: var(--primary-color);
  }

  .contact-item p,
  .contact-item a {
    font-size: 16px;
    color: var(--text-dark);
    text-decoration: none;
  }

  .contact-item a:hover {
    color: var(--primary-color);
  }

  .contact-message {
    padding: 25px;
    background: white;
    border-radius: 15px;
    border-right: 4px solid var(--accent-color);
  }

  .urdu-message {
    font-size: 18px;
    line-height: 1.9;
    margin-bottom: 15px;
  }

  .english-message {
    font-size: 16px;
    color: var(--text-dark);
    opacity: 0.8;
    font-family: "Cormorant Garamond", serif;
  }

  /* Contact Form */
  .contact-form {
    background: white;
    padding: 40px;
    border-radius: 25px;
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
    border: 2px solid var(--secondary-color);
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-group label {
    display: block;
    font-size: 16px;
    margin-bottom: 10px;
    color: var(--primary-color);
    font-weight: 600;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 15px 20px;
    border: 2px solid var(--secondary-color);
    border-radius: 12px;
    font-size: 16px;
    font-family: "Noto Nastaliq Urdu", serif;
    direction: rtl;
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(139, 38, 53, 0.1);
  }

  .submit-btn {
    width: 100%;
    font-size: 16px;
    padding: 15px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background: var(--primary-color);
    color: var(--text-light);
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .submit-btn:hover:not(:disabled) {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(139, 38, 53, 0.3);
  }

  .submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  /* Social Section */
  .social-section {
    padding: 100px 0;
  }

  .section-title {
    font-size: 40px;
    text-align: center;
    margin-bottom: 10px;
    color: var(--primary-color);
    font-weight: 600;
  }

  .section-subtitle {
    font-size: 20px;
    text-align: center;
    margin-bottom: 50px;
    color: var(--text-dark);
    opacity: 0.7;
    font-family: "Cinzel", serif;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
  }

  .social-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px 40px;
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    text-decoration: none;
    transition: var(--transition-smooth);
    border: 2px solid transparent;
  }

  .social-item:hover {
    transform: translateY(-10px);
    border-color: var(--accent-color);
    box-shadow: 0 20px 50px rgba(139, 38, 53, 0.15);
  }

  .social-icon {
    margin-bottom: 10px;
  }

  .social-name {
    font-size: 16px;
    color: var(--primary-color);
    font-weight: 600;
  }

  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .page-title {
      font-size: 48px;
    }

    .contact-info h2 {
      font-size: 32px;
    }

    .contact-subtitle {
      font-size: 18px;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 40px 0;
      padding-top: 120px;
    }

    .page-title {
      font-size: 38px;
    }

    .contact-info h2 {
      font-size: 28px;
    }

    .contact-form {
      padding: 25px;
    }

    .form-group input,
    .form-group textarea {
      padding: 12px 15px;
      font-size: 14px;
    }

    .submit-btn {
      font-size: 15px;
      padding: 12px 15px;
    }

    .social-links {
      gap: 20px;
    }

    .social-item {
      padding: 20px 30px;
    }
  }

  @media (max-width: 480px) {
    .page-title {
      font-size: 28px;
      margin-bottom: 10px;
    }

    .page-subtitle {
      font-size: 16px;
    }

    .contact-info h2 {
      font-size: 22px;
    }

    .contact-item {
      padding: 15px;
      gap: 15px;
    }

    .contact-icon {
      width: 50px;
      height: 50px;
    }

    .contact-form {
      padding: 20px;
    }

    .form-group {
      margin-bottom: 18px;
    }

    .form-group label {
      font-size: 14px;
    }

    .section-title {
      font-size: 28px;
    }

    .social-links {
      flex-direction: column;
      gap: 15px;
    }

    .social-item {
      width: 100%;
      padding: 20px;
    }
  }
</style>
