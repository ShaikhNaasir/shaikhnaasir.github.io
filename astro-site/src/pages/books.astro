---
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';

const books = [
  {
    title: 'خواب و خیال کی دنیا',
    titleEn: 'World of Dreams and Thoughts',
    description: 'ایک شاعرانہ مجموعہ جو زندگی کے مختلف پہلوؤں کو خوبصورت انداز میں بیان کرتا ہے۔ یہ کتاب روایتی اور جدید غزلوں کا حسین امتزاج ہے۔',
    year: '2022',
    icon: 'book-open',
    category: 'شاعری'
  },
  {
    title: 'لفظوں کی بارش',
    titleEn: 'Rain of Words',
    description: 'ایک افسانوی مجموعہ جو معاشرتی مسائل اور انسانی جذبات کو حقیقت پسندی کے ساتھ پیش کرتا ہے۔ ہر افسانہ ایک نیا تجربہ اور نیا درس ہے۔',
    year: '2023',
    icon: 'scroll',
    category: 'افسانے'
  },
  {
    title: 'ترجمہ: کلاسیکی شاہکار',
    titleEn: 'Translation: Classical Masterpieces',
    description: 'مغربی ادب کے منتخب شاہکاروں کا اردو ترجمہ، جو زبان اور ثقافت کی باریکیوں کو برقرار رکھتے ہوئے اصل جذبات کو منتقل کرتا ہے۔',
    year: '2024',
    icon: 'languages',
    category: 'ترجمہ'
  }
];
---

<BaseLayout title="کتب - Books">
  <!-- Hero Banner -->
  <section class="bg-gradient-to-br from-[#8B2635] to-[#6B1A27] py-20 text-center -mt-[100px] pt-[180px]">
    <div class="container">
      <h1 class="text-[60px] text-[#F5F5F0] mb-4 font-['Noto_Nastaliq_Urdu',serif] font-bold animate-fadeInUp max-md:text-[42px]">شائع شدہ تصانیف</h1>
      <p class="text-2xl text-[#D4AF37] font-['Cinzel',serif] animate-fadeInUp">Published Works</p>
    </div>
  </section>

  <!-- Books Grid -->
  <section class="bg-gradient-to-br from-[#FBF8F3] to-[#F5F1E8] py-[100px]">
    <div class="container">
      <div class="grid grid-cols-[repeat(auto-fit,minmax(350px,1fr))] gap-10 max-md:grid-cols-1">
        {books.map((book, index) => (
          <article class="bg-white rounded-[25px] p-10 shadow-[0_15px_50px_rgba(0,0,0,0.1)] border-2 border-[#C9A961] relative overflow-hidden transition-all duration-400 hover:-translate-y-4 hover:scale-[1.02] hover:shadow-[0_25px_70px_rgba(139,38,53,0.2)] animate-on-scroll book-card-gradient" style={`animation-delay: ${index * 0.1}s`}>
            <span class="absolute top-5 left-5 bg-[#8B2635] text-white py-1.25 px-4 rounded-[20px] text-xs">{book.category}</span>
            <span class="flex justify-center my-5">
              <Icon name={book.icon} size={60} color="var(--primary-color)" />
            </span>
            <h2 class="text-[30px] text-[#8B2635] mb-2.5 font-bold font-['Noto_Nastaliq_Urdu',serif] max-md:text-2xl">{book.title}</h2>
            <p class="text-lg text-[#2C1810] opacity-70 font-['Cinzel',serif] italic mb-5">{book.titleEn}</p>
            <p class="text-base leading-[1.9] text-[#2C1810] opacity-85 mb-6">{book.description}</p>
            <div class="border-t border-[#C9A961] pt-5">
              <span class="inline-block py-2.5 px-6 bg-[#D4AF37] text-[#2C1810] rounded-[25px] text-sm font-bold">{book.year}</span>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Reading Quote -->
  <section class="bg-gradient-to-br from-[#8B2635] to-[#6B1A27] py-20">
    <div class="container">
      <blockquote class="text-center text-[#F5F5F0] animate-on-scroll">
        <span class="flex justify-center mb-5">
          <Icon name="quote" size={60} color="var(--accent-color)" />
        </span>
        <p class="text-[36px] mb-5 max-md:text-2xl">"ہر کتاب ایک نئی دنیا کا دروازہ ہے"</p>
        <footer class="text-xl text-[#D4AF37] not-italic">— عبدالباری ایم کے</footer>
      </blockquote>
    </div>
  </section>

  <!-- CTA to Upcoming -->
  <section class="py-[100px]">
    <div class="container">
      <div class="text-center max-w-[600px] mx-auto animate-on-scroll">
        <h2 class="text-[40px] mb-4 text-[#8B2635] font-['Noto_Nastaliq_Urdu',serif] font-bold">آنے والی تصانیف</h2>
        <p class="text-lg mb-8 opacity-80">نئے منصوبوں اور آئندہ کتابوں کے بارے میں جانیں</p>
        <a href="/upcoming" class="inline-flex items-center gap-2.5 py-4 px-11 bg-[#D4AF37] text-[#2C1810] rounded-[50px] text-lg font-bold no-underline transition-all duration-400 shadow-[0_8px_25px_rgba(212,175,55,0.4)] hover:-translate-y-1 hover:shadow-[0_12px_35px_rgba(212,175,55,0.6)] hover:bg-[#E5C158]">
          <Icon name="clock" size={20} />
          دیکھیں
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .book-card-gradient::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 6px;
    background: linear-gradient(90deg, #8B2635, #D4AF37);
  }
</style>
