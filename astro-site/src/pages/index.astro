---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";

// SEO-optimized page description
const pageDescription =
  "عبدالباری ایم کے کی سرکاری ویب سائٹ - اردو ادیب، مترجم اور شاعر۔ Official website of Abdul Bari M K - Urdu writer, translator and poet from Mumbai, India. Explore books, translations and literary works.";
const pageKeywords =
  "Abdul Bari MK, عبدالباری ایم کے, Urdu writer, اردو ادیب, Mumbai author, Urdu books, Islamic literature, Urdu poetry, literary translator";
---

<BaseLayout
  title="گھر - Home"
  description={pageDescription}
  keywords={pageKeywords}
>
  <!-- Hero Section with Author Image and Quote -->
  <section
    class="min-h-screen w-full flex flex-col lg:flex-row items-center justify-center relative bg-gradient-to-br from-[#FDF8F6] via-[#F9EDE9] to-[#F5E3DD] pt-20 sm:pt-24 md:pt-28 lg:pt-32 px-4 sm:px-6 md:px-8 py-8 sm:py-12 md:py-16 lg:py-20"
    aria-label="Welcome Banner"
  >
    <div
      class="w-full max-w-7xl mx-auto flex flex-col lg:flex-row items-center justify-between gap-8 sm:gap-10 md:gap-12 lg:gap-16 xl:gap-20"
    >
      <!-- Left Side - Author Image -->
      <div
        class="flex-1 w-full lg:w-1/2 flex items-center justify-center order-2 lg:order-1 animate-fadeIn"
      >
        <div
          class="relative w-full max-w-[260px] sm:max-w-[320px] md:max-w-[400px] lg:max-w-[450px] xl:max-w-[500px]"
        >
          <div class="relative">
            <img
              src="/images/author.png"
              alt="Abdul Bari M K - Urdu Writer, Translator and Poet"
              class="w-full h-auto object-contain rounded-2xl shadow-2xl"
              loading="eager"
            />
            <div
              class="absolute -bottom-4 -right-4 w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 bg-gradient-to-br from-[#D4AF37] to-[#C9A961] rounded-full opacity-20 blur-2xl"
            >
            </div>
            <div
              class="absolute -top-4 -left-4 w-24 h-24 sm:w-32 sm:h-32 md:w-40 md:h-40 bg-gradient-to-br from-[#8B2635] to-[#6B1A27] rounded-full opacity-10 blur-3xl"
            >
            </div>
          </div>
        </div>
      </div>

      <!-- Right Side - Quote & Author Info -->
      <div
        class="flex-1 w-full lg:w-1/2 flex flex-col justify-center items-center lg:items-start text-center lg:text-right direction-rtl order-1 lg:order-2 px-2 sm:px-4 md:px-6 lg:px-0"
      >
        <!-- Author Quote -->
        <blockquote
          class="w-full max-w-2xl mb-6 sm:mb-8 md:mb-10 lg:mb-12 animate-fadeInUp"
        >
          <div
            class="text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-[3.5rem] font-['Aref_Ruqaa_Ink',serif] font-semibold leading-[1.8] md:leading-[2] text-[#8B2635] mb-4 sm:mb-5 md:mb-6 break-words"
          >
            اس کائنات کی ہر شے اپنے تخلیق کار کی فرمانبردار ہے
          </div>
          <div
            class="text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-[3.5rem] font-['Aref_Ruqaa_Ink',serif] font-semibold leading-[1.8] md:leading-[2] text-[#8B2635] break-words"
          >
            سوائے اشرف المخلوقات کہلانے والے انسان کے؛
            <br class="hidden sm:block" />
            وہی ناشکرا اور نافرمان ہے
          </div>
        </blockquote>

        <!-- Decorative Line -->
        <div
          class="w-20 sm:w-24 md:w-28 h-1 bg-gradient-to-r from-[#D4AF37] to-[#C9A961] mb-4 sm:mb-5 md:mb-6 lg:mb-8 rounded-full"
        >
        </div>

        <!-- Author Name -->
        <div
          class="mb-4 sm:mb-6 md:mb-8 lg:mb-10 animate-fadeInUp w-full"
          style="animation-delay: 0.2s"
        >
          <h1
            class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl 2xl:text-7xl font-['Noto_Nastaliq_Urdu',serif] font-bold text-[#8B2635] mb-2 sm:mb-3 leading-tight break-words"
          >
            عبدالباری ایم کے
          </h1>
          <br />
          <p
            class="text-base sm:text-lg md:text-xl lg:text-2xl font-['Cinzel',serif] font-semibold text-[#8B2635] opacity-85 tracking-wider mb-1 sm:mb-2"
          >
            Abdul Bari M K
          </p>
          <p
            class="text-xs sm:text-sm md:text-base lg:text-lg text-[#8B2635] opacity-70 tracking-widest"
          >
            ادیب ・ مترجم ・ مصنف
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @media (prefers-reduced-motion: reduce) {
    .animate-fadeInUp,
    .animate-fadeIn,
    .animate-on-scroll {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
