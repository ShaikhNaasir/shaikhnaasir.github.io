---
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';

// SEO-optimized page description
const pageDescription = "عبدالباری ایم کے کی سرکاری ویب سائٹ - اردو ادیب، مترجم اور شاعر۔ Official website of Abdul Bari M K - Urdu writer, translator and poet from Mumbai, India. Explore books, translations and literary works.";
const pageKeywords = "Abdul Bari MK, عبدالباری ایم کے, Urdu writer, اردو ادیب, Mumbai author, Urdu books, Islamic literature, Urdu poetry, literary translator";
---

<BaseLayout 
  title="گھر - Home" 
  description={pageDescription}
  keywords={pageKeywords}
>
  <!-- Full Page Hero Section -->
  <section class="min-h-screen w-full flex items-stretch relative overflow-hidden -mt-[100px] pt-[100px] bg-gradient-to-br from-[#FDF8F6] via-[#F9EDE9] to-[#F5E3DD] max-md:pt-[90px] max-md:pb-5 max-[500px]:pt-20 max-[500px]:pb-4" aria-label="Welcome Banner">
    <div class="flex items-stretch justify-between w-full max-w-full min-h-[calc(100vh-100px)] max-[500px]:min-h-[calc(100vh-95px)] max-[500px]:px-2">
      <!-- Left Side - Author Image -->
      <div class="flex-[0_0_50%] flex items-end justify-center p-0 overflow-visible relative max-lg:flex-[0_0_45%] max-md:flex-[0_0_40%] max-[768px]:flex-[0_0_30%] max-[500px]:flex-[0_0_28%] animate-fadeIn">
        <div class="absolute bottom-0 left-0 right-0 h-full flex items-end justify-center">
          <img 
            src="/images/author.png" 
            alt="Abdul Bari M K - Urdu Writer, Translator and Poet" 
            class="w-auto h-[95%] max-h-[calc(100vh-100px)] block object-contain object-[center_bottom] max-[768px]:h-[40%] max-[500px]:h-[75%]"
            loading="eager"
          />
        </div>
      </div>
      
      <!-- Right Side - Quote & Details -->
      <div class="flex-1 flex flex-col justify-center items-end py-[60px] pr-20 pl-10 text-right direction-rtl max-xl:py-10 max-xl:pr-10 max-xl:pl-5 max-md:py-8 max-md:pr-6 max-md:pl-4 max-[768px]:py-5 max-[768px]:pr-4 max-[768px]:pl-2.5 max-[500px]:py-4 max-[500px]:pr-3 max-[500px]:pl-2">
        <!-- Big Quote in Urdu -->
        <blockquote class="text-[clamp(26px,3.5vw,44px)] font-['Noto_Nastaliq_Urdu',serif] font-semibold leading-[2] my-0 mb-9 p-0 text-[#8B2635] not-italic max-w-[650px] max-md:text-[clamp(18px,3vw,28px)] max-md:leading-[1.8] max-md:mb-5 max-[768px]:text-[clamp(15px,3.2vw,24px)] max-[768px]:mb-4.5 max-[500px]:text-[clamp(13px,3vw,20px)] max-[500px]:leading-[1.75] max-[500px]:mb-3.5 animate-fadeInUp">
          اس کائنات کی ہر شے اپنے تخلیق کار کی فرمانبردار ہے
          <br />
          <br />
          سوائے اشرف المخلوقات کہلانے والے انسان کے
          <br />
          وہی ناشکرا اور نافرمان ہے
        </blockquote>
        
        <!-- Author Signature/Name -->
        <div class="mb-5 max-w-[650px] w-full max-[768px]:mb-3 max-[500px]:mb-2.5 animate-fadeInUp" style="animation-delay: 0.3s">
          <span class="block w-[100px] h-0.5 bg-gradient-to-r from-[#D4AF37] to-[#C9A961] mb-5 ml-0 max-md:w-[60px] max-md:h-0.5 max-md:mb-3 max-[500px]:w-10 max-[500px]:mb-2"></span>
          <p class="text-[clamp(28px,4vw,48px)] font-['Noto_Nastaliq_Urdu',serif] font-bold text-[#8B2635] my-0 leading-[1.4] max-md:text-[clamp(22px,4vw,36px)] max-[768px]:text-[clamp(20px,4vw,30px)] max-[500px]:text-[clamp(18px,4vw,26px)]">عبدالباری ایم کے</p>
        </div>
        
        <!-- English Name & Tagline -->
        <div class="mb-8 max-w-[650px] w-full max-md:mb-5 max-[768px]:mb-5 max-[500px]:mb-3 animate-fadeInUp" style="animation-delay: 0.5s">
          <p class="text-[clamp(16px,2vw,22px)] font-['Cinzel',serif] font-semibold text-[#8B2635] my-0 mb-1.5 tracking-[2px] opacity-85 max-md:text-[clamp(14px,2vw,18px)] max-[768px]:text-[clamp(12px,2vw,16px)] max-[768px]:tracking-[1px] max-[500px]:text-[clamp(10px,2vw,14px)] max-[500px]:mb-0.75">Abdul Bari M K</p>
          <p class="text-[clamp(13px,1.5vw,17px)] text-[#8B2635] my-0 tracking-[4px] opacity-65 max-md:text-[clamp(11px,1.5vw,14px)] max-md:tracking-[2px] max-[500px]:text-[clamp(9px,1.5vw,11px)]">ادیب ・ مترجم ・ شاعر</p>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex gap-4 flex-wrap max-w-[650px] w-full max-md:gap-2 max-[768px]:gap-2 max-[500px]:gap-1.5 animate-fadeInUp" style="animation-delay: 0.7s">
          <a href="/books" class="inline-flex items-center gap-2.5 py-3.5 px-8 text-[15px] font-semibold rounded-[50px] no-underline transition-all duration-350 bg-gradient-to-br from-[#D4AF37] to-[#E5C158] text-[#2C1810] shadow-[0_6px_20px_rgba(212,175,55,0.35)] hover:-translate-y-1 hover:shadow-[0_10px_30px_rgba(212,175,55,0.5)] max-md:py-2.5 max-md:px-5 max-md:text-[13px] max-md:gap-1.5 max-[768px]:py-2 max-[768px]:px-4 max-[768px]:text-xs max-[768px]:gap-1.5 max-[500px]:py-1.75 max-[500px]:px-3.5 max-[500px]:text-[11px] max-[500px]:gap-1">
            <Icon name="book-open" size={18} />
            میری تخلیقات
          </a>
          <a href="/about" class="inline-flex items-center gap-2.5 py-3.5 px-8 text-[15px] font-semibold rounded-[50px] no-underline transition-all duration-350 bg-transparent border-2 border-[#8B2635] text-[#8B2635] hover:bg-[#8B2635] hover:text-[#F5F5F0] hover:-translate-y-1 max-md:py-2.5 max-md:px-5 max-md:text-[13px] max-md:gap-1.5 max-[768px]:py-2 max-[768px]:px-4 max-[768px]:text-xs max-[768px]:gap-1.5 max-[500px]:py-1.75 max-[500px]:px-3.5 max-[500px]:text-[11px] max-[500px]:gap-1">
            <Icon name="user" size={18} />
            تعارف
          </a>
        </div>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10 opacity-80 animate-bounce-slow max-[768px]:bottom-2.5" aria-label="Scroll down">
      <Icon name="chevron-down" size={24} color="var(--accent-color)" />
    </div>
  </section>

  <!-- Stats Section -->
  <section class="bg-[#1a0a0f] py-12" aria-label="Achievements">
    <div class="max-w-[1400px] mx-auto px-10 relative z-[2] md:px-5">
      <div class="grid grid-cols-4 gap-8 max-[900px]:grid-cols-2 max-[600px]:grid-cols-2 max-[600px]:gap-5">
        <div class="text-center text-[#F5F5F0] animate-on-scroll">
          <Icon name="book-open" size={32} color="var(--accent-color)" />
          <span class="block text-[clamp(32px,5vw,48px)] font-bold font-['Cinzel',serif] text-[#D4AF37] my-2.5 mb-1">3+</span>
          <span class="text-base opacity-85">شائع شدہ کتابیں</span>
        </div>
        <div class="text-center text-[#F5F5F0] animate-on-scroll">
          <Icon name="languages" size={32} color="var(--accent-color)" />
          <span class="block text-[clamp(32px,5vw,48px)] font-bold font-['Cinzel',serif] text-[#D4AF37] my-2.5 mb-1">50+</span>
          <span class="text-base opacity-85">تراجم</span>
        </div>
        <div class="text-center text-[#F5F5F0] animate-on-scroll">
          <Icon name="award" size={32} color="var(--accent-color)" />
          <span class="block text-[clamp(32px,5vw,48px)] font-bold font-['Cinzel',serif] text-[#D4AF37] my-2.5 mb-1">5+</span>
          <span class="text-base opacity-85">ایوارڈز</span>
        </div>
        <div class="text-center text-[#F5F5F0] animate-on-scroll">
          <Icon name="users" size={32} color="var(--accent-color)" />
          <span class="block text-[clamp(32px,5vw,48px)] font-bold font-['Cinzel',serif] text-[#D4AF37] my-2.5 mb-1">1K+</span>
          <span class="text-base opacity-85">قارئین</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Intro Section -->
  <section class="bg-gradient-to-br from-[#FBF8F3] to-[#F5F1E8] py-20" aria-label="Services Overview">
    <div class="max-w-[1400px] mx-auto px-10 relative z-[2] md:px-5">
      <div class="grid grid-cols-[repeat(auto-fit,minmax(280px,1fr))] gap-8">
        <article class="bg-white p-9 rounded-[20px] text-center shadow-[0_10px_40px_rgba(0,0,0,0.08)] border-2 border-[#C9A961] transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_20px_50px_rgba(139,38,53,0.15)] animate-on-scroll">
          <Icon name="book-open" size={40} color="var(--primary-color)" />
          <h2 class="text-[26px] my-5 mb-3 text-[#8B2635] font-['Noto_Nastaliq_Urdu',serif]">کتابیں</h2>
          <p class="text-[15px] opacity-80 mb-4.5">شائع شدہ تصانیف اور ادبی شاہکار</p>
          <a href="/books" class="inline-flex items-center gap-1.5 text-[#D4AF37] no-underline font-semibold transition-all duration-300 hover:gap-2.5" aria-label="View all books">
            مزید دیکھیں
            <Icon name="arrow-right" size={16} />
          </a>
        </article>
        
        <article class="bg-white p-9 rounded-[20px] text-center shadow-[0_10px_40px_rgba(0,0,0,0.08)] border-2 border-[#C9A961] transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_20px_50px_rgba(139,38,53,0.15)] animate-on-scroll">
          <Icon name="languages" size={40} color="var(--primary-color)" />
          <h2 class="text-[26px] my-5 mb-3 text-[#8B2635] font-['Noto_Nastaliq_Urdu',serif]">ترجمہ</h2>
          <p class="text-[15px] opacity-80 mb-4.5">اردو اور انگریزی کے درمیان پُل</p>
          <a href="/translation" class="inline-flex items-center gap-1.5 text-[#D4AF37] no-underline font-semibold transition-all duration-300 hover:gap-2.5" aria-label="View translation services">
            مزید دیکھیں
            <Icon name="arrow-right" size={16} />
          </a>
        </article>
        
        <article class="bg-white p-9 rounded-[20px] text-center shadow-[0_10px_40px_rgba(0,0,0,0.08)] border-2 border-[#C9A961] transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_20px_50px_rgba(139,38,53,0.15)] animate-on-scroll">
          <Icon name="award" size={40} color="var(--primary-color)" />
          <h2 class="text-[26px] my-5 mb-3 text-[#8B2635] font-['Noto_Nastaliq_Urdu',serif]">سفر</h2>
          <p class="text-[15px] opacity-80 mb-4.5">زندگی کے اہم لمحات اور کامیابیاں</p>
          <a href="/life-journey" class="inline-flex items-center gap-1.5 text-[#D4AF37] no-underline font-semibold transition-all duration-300 hover:gap-2.5" aria-label="View life journey">
            مزید دیکھیں
            <Icon name="arrow-right" size={16} />
          </a>
        </article>
      </div>
    </div>
  </section>

  <!-- Featured Quote -->
  <section class="bg-gradient-to-br from-[#8B2635] to-[#6B1A27] py-20" aria-label="Featured Quote">
    <div class="max-w-[1400px] mx-auto px-10 relative z-[2] md:px-5">
      <figure class="text-center max-w-[800px] mx-auto text-[#F5F5F0] animate-on-scroll">
        <Icon name="quote" size={60} color="var(--accent-color)" class="block mx-auto mb-5 opacity-80" />
        <blockquote class="text-[clamp(22px,4vw,32px)] leading-[1.8] mb-6 italic">
          الفاظ میں وہ طاقت ہے جو پہاڑوں کو ہلا دے، دلوں کو بدل دے، اور نسلوں کو جوڑ دے۔
        </blockquote>
        <figcaption class="text-lg text-[#D4AF37]">— عبدالباری ایم کے</figcaption>
      </figure>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="bg-gradient-to-br from-[#FBF8F3] to-[#F5F1E8] py-[60px]" aria-label="Quick Navigation">
    <div class="max-w-[1400px] mx-auto px-10 relative z-[2] md:px-5">
      <div class="grid grid-cols-4 gap-5 max-[900px]:grid-cols-2 max-[600px]:grid-cols-2 max-[600px]:gap-4">
        <a href="/books" class="bg-white p-8 rounded-2xl text-center no-underline shadow-[0_8px_30px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_15px_40px_rgba(139,38,53,0.12)] animate-on-scroll max-[600px]:p-5">
          <Icon name="book-open" size={36} color="var(--primary-color)" />
          <h3 class="text-[22px] text-[#8B2635] my-4 mb-1 font-['Noto_Nastaliq_Urdu',serif]">کتب</h3>
          <span class="text-xs text-[#2C1810] opacity-60 font-['Cinzel',serif]">Books</span>
        </a>
        <a href="/life-journey" class="bg-white p-8 rounded-2xl text-center no-underline shadow-[0_8px_30px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_15px_40px_rgba(139,38,53,0.12)] animate-on-scroll max-[600px]:p-5">
          <Icon name="clock" size={36} color="var(--primary-color)" />
          <h3 class="text-[22px] text-[#8B2635] my-4 mb-1 font-['Noto_Nastaliq_Urdu',serif]">زندگی</h3>
          <span class="text-xs text-[#2C1810] opacity-60 font-['Cinzel',serif]">Life Journey</span>
        </a>
        <a href="/upcoming" class="bg-white p-8 rounded-2xl text-center no-underline shadow-[0_8px_30px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_15px_40px_rgba(139,38,53,0.12)] animate-on-scroll max-[600px]:p-5">
          <Icon name="calendar" size={36} color="var(--primary-color)" />
          <h3 class="text-[22px] text-[#8B2635] my-4 mb-1 font-['Noto_Nastaliq_Urdu',serif]">آئندہ</h3>
          <span class="text-xs text-[#2C1810] opacity-60 font-['Cinzel',serif]">Upcoming</span>
        </a>
        <a href="/contact" class="bg-white p-8 rounded-2xl text-center no-underline shadow-[0_8px_30px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-2 hover:shadow-[0_15px_40px_rgba(139,38,53,0.12)] animate-on-scroll max-[600px]:p-5">
          <Icon name="mail" size={36} color="var(--primary-color)" />
          <h3 class="text-[22px] text-[#8B2635] my-4 mb-1 font-['Noto_Nastaliq_Urdu',serif]">رابطہ</h3>
          <span class="text-xs text-[#2C1810] opacity-60 font-['Cinzel',serif]">Contact</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes bounce-slow {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    50% {
      transform: translateX(-50%) translateY(-8px);
    }
  }

  .animate-bounce-slow {
    animation: bounce-slow 2.5s ease-in-out infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-bounce-slow {
      animation: none;
    }
  }
</style>
