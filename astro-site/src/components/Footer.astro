---
// Footer Component
import Icon from "./Icon.astro";

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-gradient-to-b from-[#1a0a0f] to-[#0d0507] text-[#F5F5F0] text-center py-12 sm:py-16 lg:py-[60px] pb-6 sm:pb-8 lg:pb-[30px] direction-ltr"
>
  <div class="max-w-[1400px] mx-auto px-4 sm:px-6 md:px-10 relative z-[2]">
    <!-- Brand Section -->
    <div class="mb-5 sm:mb-6">
      <div
        class="flex justify-center items-center gap-2 sm:gap-3 mb-3 sm:mb-4 opacity-80"
      >
        <Icon name="sparkles" size={18} color="var(--accent-color)" />
        <Icon name="star" size={22} color="var(--accent-color)" />
        <Icon name="sparkles" size={18} color="var(--accent-color)" />
      </div>
      <h3
        class="text-2xl sm:text-3xl md:text-[28px] font-bold text-[#D4AF37] my-0 mb-1 font-['Noto_Nastaliq_Urdu',serif] direction-rtl"
        lang="ur"
      >
        عبدالباری ایم کے
      </h3>
      <br />
      <p
        class="text-xs sm:text-sm text-[#F5F5F0] opacity-70 font-['Cinzel',serif] tracking-[1px] sm:tracking-[2px] my-0 direction-ltr"
        lang="en"
        dir="ltr"
      >
        Abdul Bari M K
      </p>
    </div>

    <!-- Quick Links -->
    <nav
      class="flex justify-center items-center gap-3 sm:gap-4 md:gap-5 flex-wrap mb-6 sm:mb-8"
      aria-label="Footer Navigation"
    >
      <a
        href="/"
        class="inline-flex items-center gap-1 sm:gap-1.5 text-[#F5F5F0] no-underline text-xs sm:text-sm py-1.5 sm:py-2 px-3 sm:px-4 rounded-xl sm:rounded-[20px] bg-white/[0.05] transition-all duration-300 hover:bg-[rgba(212,175,55,0.15)] hover:text-[#D4AF37] direction-rtl"
      >
        <Icon name="home" size={14} />
        <span lang="ur">گھر</span>
      </a>
      <a
        href="/about"
        class="inline-flex items-center gap-1 sm:gap-1.5 text-[#F5F5F0] no-underline text-xs sm:text-sm py-1.5 sm:py-2 px-3 sm:px-4 rounded-xl sm:rounded-[20px] bg-white/[0.05] transition-all duration-300 hover:bg-[rgba(212,175,55,0.15)] hover:text-[#D4AF37] direction-rtl"
      >
        <Icon name="user" size={14} />
        <span lang="ur">تعارف</span>
      </a>
      <a
        href="/books"
        class="inline-flex items-center gap-1 sm:gap-1.5 text-[#F5F5F0] no-underline text-xs sm:text-sm py-1.5 sm:py-2 px-3 sm:px-4 rounded-xl sm:rounded-[20px] bg-white/[0.05] transition-all duration-300 hover:bg-[rgba(212,175,55,0.15)] hover:text-[#D4AF37] direction-rtl"
      >
        <Icon name="book-open" size={14} />
        <span lang="ur">کتب</span>
      </a>
      <a
        href="/contact"
        class="inline-flex items-center gap-1 sm:gap-1.5 text-[#F5F5F0] no-underline text-xs sm:text-sm py-1.5 sm:py-2 px-3 sm:px-4 rounded-xl sm:rounded-[20px] bg-white/[0.05] transition-all duration-300 hover:bg-[rgba(212,175,55,0.15)] hover:text-[#D4AF37] direction-rtl"
      >
        <Icon name="mail" size={14} />
        <span lang="ur">رابطہ</span>
      </a>
    </nav>

    <!-- Divider -->
    <div
      class="w-20 sm:w-[100px] h-px bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent mx-auto mb-5 sm:mb-6 opacity-50"
    >
    </div>

    <!-- Copyright & Credits -->
    <div class="flex flex-col items-center gap-2 sm:gap-2.5">
      <p
        class="flex items-center justify-center gap-1.5 sm:gap-2 text-xs sm:text-[13px] text-[#F5F5F0] opacity-75 my-0 direction-ltr flex-wrap"
        dir="ltr"
        lang="en"
      >
        <span>© {currentYear}</span>
        <span
          class="font-['Noto_Nastaliq_Urdu',serif] text-[#D4AF37] direction-rtl"
          lang="ur"
          dir="rtl">عبدالباری ایم کے</span
        >
        <span class="text-[#D4AF37] opacity-50">•</span>
        <span>All Rights Reserved</span>
      </p>
      <p
        class="flex items-center justify-center gap-1 text-[10px] sm:text-[11px] text-[#F5F5F0] opacity-50 my-0 direction-ltr"
        dir="ltr"
        lang="en"
      >
        <span>Crafted with</span>
        <Icon name="heart" size={12} color="#e74c3c" />
        <span>by</span>
        <a
          href="https://naze.in"
          class="text-[#D4AF37] no-underline font-semibold transition-opacity duration-300 hover:opacity-80"
          >Naze Technology</a
        >
      </p>
    </div>
  </div>
</footer>
